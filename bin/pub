#!/bin/bash
#
# Copyright 2018 Amazon.com, Inc. or its affiliates. All Rights Reserved.
# SPDX-License-Identifier: MIT-0

thingName=$1

if [[ -z "$thingName" ]]; then
	echo "Usage: $0 thing message..."
	exit
fi

shift
message="$@"

aws iot describe-endpoint --endpoint-type iot:Data-ATS > endpoint.file
endpoint=`cat endpoint.file`
rm endpoint.file

if [[ -z "$endpoint" ]]; then
	echo "Could not discover AWS IoT Endpoint"
	exit
fi

echo "Connecting $thingName to $endpoint"
mosquitto_pub -d --cafile certs/AmazonRootCA1.pem  --cert $thingName.crt --key $thingName.key -h $endpoint -p 8883 -q 0 -t $thingName -i $thingName -m "$message"
